<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'info', user: @user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
      <table class='table table-hover table-inverse text-center'>
        <thead>
          <tr>
            <th>今日の投稿数</th>
            <th>前日の投稿数</th>
            <th>前日比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @today_book.count %></td>
            <td><%= @yesterday_book.count %></td>
            <td>
              <% if @yesterday_book.count == 0 %>
                前日の投稿はありません
              <% else %>
                <% @the_day_before = @today_book.count / @yesterday_book.count.to_f %>
                <%= (@the_day_before * 100).round %>
              <% end %>
            </td>
          </tr>
        </tbody>

        <thead>
          <tr>
            <th>今週の投稿数</th>
            <th>前週の投稿数</th>
            <th>前週比</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @thisweek_book.count %></td>
            <td><%= @lastweek_book.count %></td>
            <td>
              <% if @lastweek_book.count == 0 %>
                先週の投稿はありません
              <% else %>
                <% @the_week_before = @thisweek_book.count / @lastweek_book.count.to_f %>
                <%= (@the_week_before * 100).round %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <table class="table table-bordered">
        <thead>
          <tr>
            <th colspan="6">7日分の投稿数</th>
          </tr>
          <tr>
            <th>6日前</th>
            <th>5日前</th>
            <th>4日前</th>
            <th>3日前</th>
            <th>2日前</th>
            <th>1日前</th>
            <th>今日</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><%= @book_6day.count %></td>
            <td><%= @book_5day.count %></td>
            <td><%= @book_4day.count %></td>
            <td><%= @book_3day.count %></td>
            <td><%= @book_2day.count %></td>
            <td><%= @yesterday_book.count %></td>
            <td><%= @today_book.count %></td>
          </tr>
        </tbody>
      </table>

      <div style= "width:765px; height:500px;">
      <script src ="https://cdn.jsdelivr.net/npm/chart.js@2.8.0/dist/Chart.min.js"></script>
      <canvas id="myChart"></canvas>
        <script>
            var ctx = document.getElementById("myChart").getContext('2d');
            var myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],
                    datasets: [{
                        label: "投稿した本の数",
                        data: [<%= @book_6day.count %>,
                              <%= @book_5day.count %>,
                              <%= @book_4day.count %>,
                              <%= @book_3day.count %>,
                              <%= @book_2day.count %>,
                              <%= @yesterday_book.count %>,
                              <%= @today_book.count %>],
                        backgroundColor: 'red',
                        borderColor: 'blue',
                        fill: false
                    }]
                },
            });
        </script>
      </div>

      <%= form_with url: user_search_path(@user), method: :get, remote:true,local:false do |f| %>
        <%= f.date_field :created_at %>
        <%= f.submit "検索", class:"btn btn-primary btn-sm" %>
      <% end %>
      <div id="search_result">
        <% if @search_book.present? %>
          <%= render "users/search", search_book: @search_book %>
        <% end %>
      </div>

    </div>
  </div>
</div>


