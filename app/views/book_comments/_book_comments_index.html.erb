<table>
  <!--<p>コメント数：<%#= @book_comments.count %></p>-->
  <% book.book_comments.each do |book_comment| %>
  <tr>
    <td>
    <p><%= image_tag book_comment.user.get_profile_image %></p>
    <%= link_to book_comment.user.name,user_path(book_comment.user_id) %>
    </td>
    <!--book_commentのuserの名前-->
    <!--user.name(modelのuserでnameはuserテーブルのカラム-->
    <td><%= book_comment.comment %></td>
    <!--book_commentのcomment-->

    <td>
    <% if book_comment.user == current_user %>
    <%= link_to "Destroy", book_book_comment_path(book_comment.book,book_comment), method: :delete,local: false,remote: true, class: "btn btn-sm btn-danger"%>
    <!--パスの後にidつけつかつけないかはrails routesのurlの後に:idがついているかどうか-->
    <% end %>
    </td>
  </tr>
  <% end %>
</table>